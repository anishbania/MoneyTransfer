@using UsersApp.ViewModels;
@model VerifyEmailViewModel;

@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div id="main-wrapper" class="h-100">
    <div class="container-fluid px-0 h-100">
        <div class="row no-gutters h-100">
            <div class="col-md-6">
                <!-- Verify Your Email Text -->
                <div class="hero-wrap d-flex align-items-center h-100">
                    <div class="hero-mask opacity-8 bg-primary"></div>
                    <div class="hero-bg hero-bg-scroll" style="background-image:url('/images/bg/image-3.jpg');"></div>
                    <div class="hero-content mx-auto w-100 h-100 d-flex flex-column">
                        <div class="row no-gutters">
                            <div class="col-10 col-lg-9 mx-auto">
                                <div class="logo mt-5 mb-5 mb-md-0">
                                    <a class="d-flex" href="index.html" title="My Application">
                                        <img src="/images/logo-light.png" alt="My Application Logo">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row my-auto">
                            <div class="col-10 col-lg-9 mx-auto">
                                <h1 class="text-11 text-white mb-4">Verify Your Email</h1>
                                <p class="text-4 text-white line-height-4 mb-5">
                                    Let’s confirm your email to secure your account.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Verify Your Email Text End -->
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <!-- Verify Email Form -->
                <div class="container my-4">
                    <div class="row">
                        <div class="col-11 col-lg-9 col-xl-8 mx-auto">
                            <h3 class="font-weight-400 mb-4">Verify Email</h3>
                            <form asp-action="VerifyEmail" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Email">Email Address</label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter Your Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <button class="btn btn-primary btn-block my-4" type="submit">Verify</button>
                            </form>
                            <div class="text-center">
                                <a asp-controller="Home" asp-action="Index" class="btn-link mt-3">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Verify Email Form End -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}



