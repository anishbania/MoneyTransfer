@using UsersApp.ViewModels;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div id="main-wrapper" class="h-100">
    <div class="container-fluid px-0 h-100">
        <div class="row no-gutters h-100">
            <div class="col-md-6">
                <!-- Get Verified! Text -->
                <div class="hero-wrap d-flex align-items-center h-100">
                    <div class="hero-mask opacity-8 bg-primary"></div>
                    <div class="hero-bg hero-bg-scroll" style="background-image:url('/images/bg/image-3.jpg');"></div>
                    <div class="hero-content mx-auto w-100 h-100 d-flex flex-column">
                        <div class="row no-gutters">
                            <div class="col-10 col-lg-9 mx-auto">
                                <div class="logo mt-5 mb-5 mb-md-0">
                                    <a class="d-flex" asp-controller="Home" asp-action="Index" title="My Application">
                                        <img src="/images/logo-light.png" alt="My Application Logo">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row my-auto">
                            <div class="col-10 col-lg-9 mx-auto">
                                <h1 class="text-11 text-white mb-4">Get Verified!</h1>
                                <p class="text-4 text-white line-height-4 mb-5">
                                    Every day, our application helps thousands of users get started.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Get Verified! Text End -->
            </div>
            <div class="col-md-6 d-flex align-items-center">
                <!-- Sign Up Form -->
                <div class="container my-4">
                    <div class="row">
                        <div class="col-11 col-lg-9 col-xl-8 mx-auto">
                            <h3 class="font-weight-400 mb-4">Sign Up</h3>
                            <form asp-action="Register" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Name">Full Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter Your Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">Email Address</label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter Your Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" class="form-control" placeholder="Enter Your Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Your Password" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button class="btn btn-primary btn-block my-4" type="submit">Sign Up</button>
                            </form>
                            <p class="text-3 text-center text-muted">
                                Already have an account?
                                <a asp-controller="Account" asp-action="Login" class="btn-link">Log In</a>
                            </p>
                            <div class="text-center">
                                <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Sign Up Form End -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}



