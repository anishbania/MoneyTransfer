@model IEnumerable<UsersApp.Areas.Admin.ViewModel.TransactionDetailsViewModel>
@{
    ViewData["Title"] = "Transaction Report";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    int i = 1;

}

<div id="main-wrapper">
    <div id="content" class="py-4">
        <div class="container">
            <div class="row">
                <div class="col mb-2">
                    <div class="row">
                        <div class="col mb-2">
                            <form class="mt-2">
                                <div class="row">
                                    <div class="form-group col-md-3">
                                        <input type="date" name="from" id="from" class="form-control datetimepicker" placeholder="Date From" required>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <input type="date" name="To" id="to" class="form-control datetimepicker" placeholder="Date To" required>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <input type="submit" value="Search" class="btn btn-outline-primary" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <table id="example" class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>S.N</th>
                                <th>@Html.DisplayNameFor(model => model.FirstNameSender)</th>
                                <th>@Html.DisplayNameFor(model => model.FirstNameReceiver)</th>
                                <th>@Html.DisplayNameFor(model => model.RecipientEmail)</th>
                                <th>@Html.DisplayNameFor(model => model.TransferAmount)</th>
                                <th>@Html.DisplayNameFor(model => model.PayoutAmount)</th>
                                <th>@Html.DisplayNameFor(model => model.ExchangeRate)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@Html.DisplayFor(modelItem => item.FirstNameSender)</td>
                                    <td>@Html.DisplayFor(modelItem => item.FirstNameReceiver)</td>
                                    <td>@Html.DisplayFor(modelItem => item.RecipientEmail)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TransferAmount)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PayoutAmount)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ExchangeRate)</td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script>
    $(document).ready(function () {
        $('.datetimepicker').datepicker({
            format: 'yyyy-mm-dd',
            autoclose: true,
            todayHighlight: true
        });
    });
</script>
<partial name="_AddDatatable">
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
        }
    }
